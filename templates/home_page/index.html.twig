{% extends 'base.html.twig' %}

{% block title %}Fauteuil !{% endblock %}

{% block body %}
    {% include "header/index.html.twig" %}
    <h1 style="text-align: center;">Récapitulatif des salles</h1>
    <table style="margin: 0 auto;">
        <thead>
            <tr>
                <th>Numéro de salle</th>
                <th>État</th>
            </tr>
        </thead>
        <tbody>
            {% for userData in filteredUserData %}
                <tr>
                    <td style="text-align: center;">{{ userData.fish}}</td>
                    <td style="text-align: center;">{{ userData.etat.getLabel() }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


    <style>
        table{
            width: 250px;
        }

        thead tr {
            height: 50px;
        }

    </style>
{% endblock %}