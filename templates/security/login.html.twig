{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}


{% block body %}
<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: #f5f5f5; /* Couleur d'arrière-plan */
    }
        .container {
        text-align: center;
        background-color: #fff; /* Couleur de fond du formulaire */
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Ombre légère */
    }

    .alert {
        background-color: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
        padding: 0.75rem 1.25rem;
        margin-top: 1rem;
    }

    .mb-3 {
        margin-bottom: 1rem;
    }

    .h3 {
        font-size: 1.75rem;
    }
</style>


<form method="post" >
   
    {% if error %}  
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
  
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
  
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

     {% if error %} 

    <button id="test" class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>

    {% else %}

    <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button>
    
        {% endif %}
 

</form>
<script>
    const inputPassword = document.getElementById("test");
        inputPassword.disabled = true; // Bloquer l'input pendant 3 secondes
        setTimeout(function() {
        inputPassword.disabled = false; // Débloquer l'input après 3 secondes
        }, 3000); // 3 secondes en millisecondes
</script>

{% endblock %}
